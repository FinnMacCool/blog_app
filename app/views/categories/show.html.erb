<h1><%= "#{@category.name} (#{@category.posts.count})" %>
<% if current_user.admin? %>
<font size="2" spacing="2px">
    <%= link_to "umbenennen", "/kategorien/#{@category.id}/bearbeiten"%>
  </font>
<% end %>
</h1>
<% if @posts.any? %>
  <div class="posts">
    <ol>
      <%= render partial: 'shared/teaser', collection: @posts %>
      <%= will_paginate @posts%>
    </ol>
  </div>
<% end %>